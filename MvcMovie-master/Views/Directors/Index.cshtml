@model IEnumerable<MvcMovie.Models.Director>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-light">Directors</h1>

<p>
    <a class="btn btn-small btn-outline-light text-light" asp-action="Create">Create New</a>
</p>

<table class="table table-light table-striped">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <a class="btn btn-small btn-success" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        <a class="btn btn-small btn-secondary" asp-action="Details" asp-route-id="@item.ID">Details</a>
                        <a class="btn btn-small btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
